<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_bottom_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_wangwang"
            android:layout_width="@dimen/dialog_spen_btn_width"
            android:layout_height="@dimen/dialog_spen_btn_height"
            android:background="@drawable/spen_dialog_btn_wangwang" />

        <Button
            android:id="@+id/btn_fav"
            android:layout_width="@dimen/dialog_spen_btn_width"
            android:layout_height="@dimen/dialog_spen_btn_height"
            android:background="@drawable/spen_dialog_btn_cart" />

        <Button
            android:id="@+id/btn_comment"
            android:layout_width="@dimen/dialog_spen_btn_width"
            android:layout_height="@dimen/dialog_spen_btn_height"
            android:background="@drawable/spen_dialog_btn_comment" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_top_biggallery"
        android:layout_gravity="top"
        android:layout_marginBottom="@dimen/dialog_spen_btn_height"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:padding="10dp"
            android:src="@drawable/spen_btn_left" />

        <FrameLayout
            android:id="@+id/fl_parent"
            android:layout_width="@dimen/dialog_spen_image_width"
            android:layout_height="@dimen/dialog_spen_image_width"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/tv_numbers"
                android:layout_width="56dp"
                android:layout_height="28dp"
                android:layout_gravity="right|top"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:padding="2dp"
                android:textSize="16dp" >
            </TextView>

            <Gallery
                android:id="@+id/big_gallery"
                android:layout_width="@dimen/dialog_spen_image_width"
                android:layout_height="@dimen/dialog_spen_image_width"
                android:layout_gravity="center"
                android:background="@color/gold"
                android:fadingEdge="none"
                android:spacing="0dp"
                android:unselectedAlpha="1.0" >
            </Gallery>
        </FrameLayout>

        <ImageButton
            android:id="@+id/btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:padding="10dp"
            android:src="@drawable/spen_btn_right" />
    </RelativeLayout>

</FrameLayout>